----------------------------------------------------------------
-- MODERN ANIMATED TEXT FUNCTION (MADE BY Jack4Life)
----------------------------------------------------------------
local function showJack4LifeAnimation()
    -- Create the animation GUI
    local animationGui = Instance.new("ScreenGui")
    animationGui.Name = "Jack4LifeAnimation"
    animationGui.ResetOnSpawn = false
    animationGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
    animationGui.Parent = player:WaitForChild("PlayerGui")
    
    -- Create a fullscreen background
    local background = Instance.new("Frame")
    background.Size = UDim2.new(1, 0, 1, 0)
    background.Position = UDim2.new(0, 0, 0, 0)
    background.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    background.BackgroundTransparency = 0
    background.ZIndex = 1000
    background.Parent = animationGui
    
    -- Create "Made By" text with large font
    local madeByText = Instance.new("TextLabel")
    madeByText.Name = "MadeByText"
    madeByText.Size = UDim2.new(1, 0, 0.3, 0)
    madeByText.Position = UDim2.new(0, 0, 0.2, 0)
    madeByText.BackgroundTransparency = 1
    madeByText.Text = "MADE BY"
    madeByText.TextColor3 = Color3.fromRGB(220, 220, 220)
    madeByText.Font = Enum.Font.GothamBlack
    madeByText.TextSize = 60
    madeByText.TextStrokeTransparency = 0.5
    madeByText.TextStrokeColor3 = Color3.fromRGB(0, 0, 0)
    madeByText.ZIndex = 1001
    madeByText.TextTransparency = 1
    madeByText.TextXAlignment = Enum.TextXAlignment.Center
    madeByText.TextYAlignment = Enum.TextYAlignment.Center
    madeByText.Parent = background
    
    -- Create "Jack4Life" text with gradient
    local jackText = Instance.new("TextLabel")
    jackText.Name = "JackText"
    jackText.Size = UDim2.new(1, 0, 0.4, 0)
    jackText.Position = UDim2.new(0, 0, 0.4, 0)
    jackText.BackgroundTransparency = 1
    jackText.Text = "JACK4LIFE"
    jackText.TextColor3 = Color3.fromRGB(255, 255, 255)
    jackText.Font = Enum.Font.GothamBlack
    jackText.TextSize = 100
    jackText.TextStrokeTransparency = 0.3
    jackText.TextStrokeColor3 = Color3.fromRGB(0, 0, 0)
    jackText.ZIndex = 1001
    jackText.TextTransparency = 1
    jackText.TextXAlignment = Enum.TextXAlignment.Center
    jackText.TextYAlignment = Enum.TextYAlignment.Center
    jackText.Parent = background
    
    -- Add gradient to Jack4Life text
    local textGradient = Instance.new("UIGradient")
    textGradient.Color = ColorSequence.new{
        ColorSequenceKeypoint.new(0, colors.neonBlue),
        ColorSequenceKeypoint.new(0.5, colors.neonPink),
        ColorSequenceKeypoint.new(1, colors.neonGreen)
    }
    textGradient.Rotation = 90
    textGradient.Enabled = false
    textGradient.Parent = jackText
    
    -- Animation sequence
    local function startAnimation()
        -- Fade in background
        background.BackgroundTransparency = 1
        local fadeIn = TweenService:Create(
            background,
            TweenInfo.new(1, Enum.EasingStyle.Quint, Enum.EasingDirection.Out),
            {BackgroundTransparency = 0}
        )
        fadeIn:Play()
        
        wait(0.5)
        
        -- Fade in "MADE BY" text
        local madeByFadeIn = TweenService:Create(
            madeByText,
            TweenInfo.new(1.5, Enum.EasingStyle.Back, Enum.EasingDirection.Out),
            {TextTransparency = 0}
        )
        madeByFadeIn:Play()
        
        wait(0.8)
        
        -- Fade in "JACK4LIFE" text with scale effect
        jackText.TextSize = 80
        local jackFadeIn = TweenService:Create(
            jackText,
            TweenInfo.new(2, Enum.EasingStyle.Elastic, Enum.EasingDirection.Out),
            {
                TextTransparency = 0,
                TextSize = 100
            }
        )
        jackFadeIn:Play()
        
        -- Enable gradient after fade in
        wait(0.5)
        textGradient.Enabled = true
        
        -- Animate gradient
        local gradientAnimation = TweenService:Create(
            textGradient,
            TweenInfo.new(3, Enum.EasingStyle.Linear, Enum.EasingDirection.InOut, -1, true),
            {Rotation = 450}
        )
        gradientAnimation:Play()
        
        wait(2)
        
        -- Fade out all text
        local textFadeOut = TweenService:Create(
            madeByText,
            TweenInfo.new(1, Enum.EasingStyle.Quint, Enum.EasingDirection.In),
            {TextTransparency = 1}
        )
        textFadeOut:Play()
        
        local jackFadeOut = TweenService:Create(
            jackText,
            TweenInfo.new(1, Enum.EasingStyle.Quint, Enum.EasingDirection.In),
            {
                TextTransparency = 1,
                TextSize = 80
            }
        )
        jackFadeOut:Play()
        
        wait(1)
        
        -- Fade out background
        local fadeOut = TweenService:Create(
            background,
            TweenInfo.new(0.8, Enum.EasingStyle.Quint, Enum.EasingDirection.In),
            {BackgroundTransparency = 1}
        )
        fadeOut:Play()
        
        fadeOut.Completed:Wait()
        animationGui:Destroy()
        
        -- Show GUIs after animation ends
        uiVisible = true
        mainContainer.Visible = true
        toggleUIBtn.Visible = true
        teleportToggleBtn.Visible = true
        
        print("Animation complete - GUIs are now visible!")
    end
    
    -- Start the animation
    task.spawn(startAnimation)
end

